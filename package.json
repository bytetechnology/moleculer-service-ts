{
  "name": "moleculer-service-ts",
  "version": "1.0.3",
  "description": "Typescript support for moleculer service actions and events",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "test": "jest --coverage --forceExit --detectOpenHandles",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytetechnology/moleculer-service-ts.git"
  },
  "keywords": [
    "moleculer",
    "service",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bytetechnology/moleculer-service-ts/issues"
  },
  "homepage": "https://github.com/bytetechnology/moleculer-service-ts#readme",
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/node": "^13.5.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "moleculer-decorators": "^1.1.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "fastest-validator": "^1.0.0",
    "moleculer": "^0.14.0-rc1"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./test",
    "coverageDirectory": "<rootDir>/coverage",
    "roots": [
      "."
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
